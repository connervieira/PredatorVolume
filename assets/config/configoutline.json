{
    "alpr": {
        "engine": ["openalpr", "phantom"],
        "region": ["us", "eu", "au", "br", "fr", "gb", "in", "kr", "mx", "sg"],
        "validation": {
            "confidence": "percentage",
            "guesses": "+int",
            "best_effort": "bool",
            "consecutive": "+int",
            "templates": "list"
        }
    },
    "display": {
        "debug_messages": "bool"
    },
    "behavior": {
        "optimization": {
            "ignore": {
                "time": {
                    "after": "+float",
                    "before": "+float"
                }
            },
            "ignore_frame_differences": "bool"
        },
        "metadata": {
            "time": {
                "method": "str",
                "overlay": {
                    "format": "str",
                    "bounding_box": {
                        "x": "+int",
                        "y": "+int",
                        "w": "+int",
                        "h": "+int"
                    }
                }
            },
            "gps": {
                "method": "str",
                "overlay": {
                    "bounding_box": {
                        "x": "+int",
                        "y": "+int",
                        "w": "+int",
                        "h": "+int"
                    }
                }
            }
        }
    }
}
